use strict;
use NethServer::BackupConfig;

my $backup = new NethServer::BackupConfig();
$backup->set_log_file("/var/log/restore-config.log");

my $ret = system("tar -C / -xf /var/lib/nethserver/backup/maildir.tar");

if ($ret != 0) {
   $backup->bad_exit("Error during maildir restore",$ret);
}


exit 0;
